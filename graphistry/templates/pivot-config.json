{
    "log": {
        "level": "debug"
    },
    "graphistry": {
      {% if graphistry_key %}
	    "key": "{{ graphistry_key }}",
      {% endif %}
	    "host": "{{ graphistry_host }}"
    },

    {% if es_host %}
    "elasticsearch":{
      "host": "{{ es_host }}",
      "port": {{ es_port|default('9200') }}
    },
    {% endif %}

    {% if splunk_host %}
    "splunk":
      {"key": "{{ splunk_password }}",
      "user": "{{ splunk_user }}",
      "host": "{{ splunk_host }}",
      "uiPort": {{ splunk_port|default('3000') }}
    },
    {% endif %}

    {% if ip_internal_accept_list %}
    "layouts": {
      "network": {
        "ipInternalAcceptList": {{ ip_internal_accept_list }}
      }
    },
    {% endif %}

    {% if http_user %}
    "authentication": {
      "passwordHash":   "{{ http_password_hash }}",
      "username": "{{ http_user|default('admin') }}"
    },
    {% endif %}

    "pivots": {
      "show": [
        {% if es_host %}
          "search-es-plain",
          "expand-elasticsearch-plain",
        {% endif %}
        {% if splunk_host %}
          "expand-splunk-plain",
          "search-splunk-plain",
        {% endif %}
        "http-search",
        "http-expand",
        "manual-data"
      ]
    }
}